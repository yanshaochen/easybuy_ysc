<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--encode filter-->
    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>EncodeFilter</filter-name>
        <filter-class>cn.happy.filter.EncodeFilter</filter-class>
    </filter>

    <!--login filter-->
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>cn.happy.filter.LoginFilter</filter-class>
        <init-param>
            <param-name>excludedURL</param-name>
            <param-value>/servlet/(Login|Register|Product)Servlet</param-value>
        </init-param>
    </filter>

    <!--ProductServlet-->
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/servlet/ProductServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>cn.happy.servlet.ProductServlet</servlet-class>
    </servlet>
    <!--log4jServlet-->
    <servlet-mapping>
        <servlet-name>log4j-init</servlet-name>
        <url-pattern>/logs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>log4j-init</servlet-name>
        <servlet-class>cn.happy.logger.Log4jInit</servlet-class>
        <init-param>
            <param-name>log4j</param-name>
            <param-value>WEB-INF/log4j.properties</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!--DB connection-->
    <resource-ref>
        <res-ref-name>jdbc/easyBuy</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!--welcome-->
    <welcome-file-list>
        <welcome-file>servlet/ProductServlet</welcome-file>
    </welcome-file-list>
</web-app>